<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/call_overlay_side_margin"
    android:paddingTop="@dimen/call_overlay_side_margin"
    android:paddingEnd="@dimen/call_overlay_side_margin"
    android:paddingBottom="@dimen/call_overlay_bottom_padding">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/call_overlay_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="@dimen/call_overlay_card_elevation"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/call_overlay_card_background"
        app:cardCornerRadius="@dimen/call_overlay_card_radius"
        app:cardElevation="@dimen/call_overlay_card_elevation"
        app:cardUseCompatPadding="false"
        app:strokeColor="@color/call_overlay_card_stroke"
        app:strokeWidth="@dimen/call_overlay_card_stroke_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/call_overlay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_call_overlay_header"
                android:paddingStart="@dimen/call_overlay_content_padding"
                android:paddingTop="@dimen/call_overlay_content_padding"
                android:paddingEnd="@dimen/call_overlay_content_padding"
                android:paddingBottom="@dimen/call_overlay_header_bottom_padding">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/call_overlay_avatar"
                    android:layout_width="@dimen/call_overlay_avatar_size"
                    android:layout_height="@dimen/call_overlay_avatar_size"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                <LinearLayout
                    android:id="@+id/call_overlay_title_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/call_overlay_avatar"
                    android:layout_toStartOf="@id/call_overlay_close"
                    android:layout_marginStart="@dimen/call_overlay_content_spacing"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/call_overlay_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/call_overlay_header_text"
                        android:textSize="@dimen/call_overlay_name_text_size"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/call_overlay_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/call_overlay_header_subtitle"
                        android:textSize="@dimen/call_overlay_subtitle_text_size"
                        android:visibility="gone"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/call_overlay_close"
                    style="@style/Widget.Material3.ImageButton.FilledTonal"
                    android:layout_width="@dimen/call_overlay_close_size"
                    android:layout_height="@dimen/call_overlay_close_size"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/call_overlay_close_background"
                    android:contentDescription="@string/call_overlay_close_content_description"
                    android:padding="12dp"
                    android:src="@drawable/ic_overlay_close"
                    app:tint="@color/call_overlay_close_icon" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_call_overlay_middle"
                android:orientation="vertical"
                android:paddingStart="@dimen/call_overlay_content_padding"
                android:paddingEnd="@dimen/call_overlay_content_padding"
                android:paddingTop="@dimen/call_overlay_section_spacing"
                android:paddingBottom="@dimen/call_overlay_section_spacing">

                <TextView
                    android:id="@+id/call_overlay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/call_overlay_status_text"
                    android:textSize="@dimen/call_overlay_status_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/call_overlay_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/call_overlay_number_text"
                    android:textSize="@dimen/call_overlay_number_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_overlay_profile_action"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/call_overlay_content_padding"
                android:layout_marginEnd="@dimen/call_overlay_content_padding"
                android:layout_marginTop="@dimen/call_overlay_profile_margin_top"
                android:text="@string/call_overlay_view_profile"
                android:textAllCaps="false"
                android:textColor="@color/call_overlay_profile_text"
                app:backgroundTint="@color/call_overlay_profile_background"
                app:icon="@drawable/ic_overlay_profile"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/call_overlay_profile_icon" />

            <LinearLayout
                android:id="@+id/call_overlay_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_call_overlay_footer"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/call_overlay_content_padding"
                android:paddingEnd="@dimen/call_overlay_content_padding"
                android:paddingTop="@dimen/call_overlay_actions_padding"
                android:paddingBottom="@dimen/call_overlay_actions_padding">

                <LinearLayout
                    android:id="@+id/call_overlay_call_action"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/call_overlay_action_padding">

                    <ImageView
                        android:id="@+id/call_overlay_call_icon"
                        android:layout_width="@dimen/call_overlay_action_icon_size"
                        android:layout_height="@dimen/call_overlay_action_icon_size"
                        android:src="@drawable/ic_call_overlay_phone"
                        app:tint="@color/call_overlay_action_icon" />

                    <TextView
                        android:id="@+id/call_overlay_call_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/call_overlay_action_call"
                        android:textColor="@color/call_overlay_action_text"
                        android:textSize="@dimen/call_overlay_action_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_overlay_message_action"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/call_overlay_action_padding">

                    <ImageView
                        android:id="@+id/call_overlay_message_icon"
                        android:layout_width="@dimen/call_overlay_action_icon_size"
                        android:layout_height="@dimen/call_overlay_action_icon_size"
                        android:src="@drawable/ic_call_overlay_message"
                        app:tint="@color/call_overlay_action_icon" />

                    <TextView
                        android:id="@+id/call_overlay_message_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/call_overlay_action_message"
                        android:textColor="@color/call_overlay_action_text"
                        android:textSize="@dimen/call_overlay_action_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/call_overlay_edit_action"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/call_overlay_action_padding">

                    <ImageView
                        android:id="@+id/call_overlay_edit_icon"
                        android:layout_width="@dimen/call_overlay_action_icon_size"
                        android:layout_height="@dimen/call_overlay_action_icon_size"
                        android:src="@drawable/ic_call_overlay_edit"
                        app:tint="@color/call_overlay_action_icon" />

                    <TextView
                        android:id="@+id/call_overlay_edit_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/call_overlay_action_edit"
                        android:textColor="@color/call_overlay_action_text"
                        android:textSize="@dimen/call_overlay_action_text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
