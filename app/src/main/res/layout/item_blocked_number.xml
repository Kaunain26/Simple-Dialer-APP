<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/activity_margin"
    android:paddingTop="@dimen/medium_margin"
    android:paddingEnd="@dimen/activity_margin"
    android:paddingBottom="@dimen/medium_margin">

    <ImageView
        android:id="@+id/blocked_number_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/medium_margin"
        android:background="@drawable/bg_blocked_icon"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/ic_tab_blocked"
        app:tint="@color/blocked_tab_red" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/blocked_number_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/_13ssp"
            tools:text="+91238383838" />

        <com.simplemobiletools.commons.views.MyTextView
            android:id="@+id/blocked_number_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:drawableStart="@drawable/ic_block_vector"
            android:drawablePadding="5dp"
            android:drawableTint="@color/md_grey"
            android:fontFamily="@font/gilroy_semi_bold"
            android:gravity="center_vertical"
            android:text="Blocked"
            android:textSize="@dimen/_12ssp"
            tools:visibility="visible" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/unblock_button"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35ssp"
        android:fontFamily="@font/gilroy_bold"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="16dp"
        android:text="@string/unblock"
        android:textAllCaps="false"
        android:textSize="14sp" />
</LinearLayout>
